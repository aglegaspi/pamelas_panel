<h1>Cohorts</h1>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col"> </th>
      <th scope="col">Name</th>
      <th scope="col">Affiliated Course</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
  <% @cohorts.each do |cohort| %>
    <tr class="main-cohort">
      <td> <%= image_tag "icons/icons8-reading_ebook.png" %> </td>
      <td><%= cohort.name %></td>
      <td><%= cohort.course.name %></td>
      <td>
        <%= link_to cohort_path(cohort), class: "small_button" do %>
          <button>View Students</button>
        <% end %>

        <%= link_to cohort_path(cohort), :method => "delete", :remote => "true", class: "delete-cohort small_button" do %>
          <button>Delete</button>
        <% end %>

      </td>
     </tr>
    <% end %>
  </tbody>
</table>
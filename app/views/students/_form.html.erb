        <%= form_for @student do |f| %>

                <div>
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name, class: 'form-control' %>
                </div>

                <div>
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, class: 'form-control' %>
                </div>

                <div>   
                    <%= f.label :birthday %>
                    <%= f.date_field :birthday, class: 'form-control' %>
                </div>

                <div>   
                    <%= f.label :highest_education %>
                    <%= f.select :highest_education, options_for_select(['HS', 'College', 'Masters', 'PHD']), {}, class: "form-control" %>
                </div>
                    <br>
                <div>   
                    <%= f.submit "Submit", class: 'btn btn-light' %>
                </div>

            <% end %>
<h1>Students</h1>

<div>
<%= link_to image_tag('icons/icons8-add_property.png') + " Add Student", new_student_path, class: "btn" %>
</div>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col"> </th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Cohort(s)</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
  <% @students.each do |display_student| %>
    <tr class="main-student">
      <td> <%= image_tag "icons/icons8-reading_ebook.png" %> </td>
      <td><%= display_student.first_name %></td>
      <td><%= display_student.last_name %></td>
      <td>
        <% display_student.student_cohorts.each do |stu_cohort| %>
        <%= stu_cohort.cohort.name %>      
        <% end %>
      </td>
      <td>
        <%= link_to new_student_student_cohort_path(display_student), :method => "get", class: "small_button" do %>
          <button>Add Cohort</button>
        <% end %>

        <%= link_to student_path(display_student), :method => "get", class: "small_button" do %>
          <button>View</button>
        <% end %>

        <%= link_to edit_student_path(display_student), :method => "get", class: "small_button" do %>
          <button>Edit</button>
        <% end %>

        <%= link_to student_path(display_student), :method => "delete", :remote => "true", class: "delete-student small_button" do %>
          <button>Delete</button>
        <% end %>
         
      </td>
     </tr>
    <% end %>
  </tbody>
</table>


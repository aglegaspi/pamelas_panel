<div class="container-fluid">
    <div class="row justify-content-center">
    
        <div class="col-md-6">
            
            <h2>Sign up</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="field">
                <%= f.label :first_name %><br />
                <%= f.text_field :first_name, autofocus: true, autocomplete: "", class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :last_name %><br />
                <%= f.text_field :last_name, autocomplete: "", class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
              </div>

              <%# <div class="field">
                <%= f.label :admin_profile %>
              <%#   <%= f.file_field :admin_profile %>
              <%# </div> %>
              <br>
              <div class="actions">
                <%= f.submit "Sign up", class: 'btn btn-light' %>
              </div>
            <% end %>
            <br>
            Oopsy daisy did you mean to <%= render "admins/shared/links" %>

          </div>
        </div>
      </div>

    </div>
</div>
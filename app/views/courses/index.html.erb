<h1>Courses</h1>

<div>
<%= link_to image_tag('icons/icons8-add_property.png') + " Add Course", new_course_path, class: "btn" %>
</div>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col"> </th>
      <th scope="col">Name</th>
      <th scope="col">Cohort(s)</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
  <% @courses.each do |display_course| %>
    <tr class="main-course">
      <td> <%= image_tag "icons/icons8-reading_ebook.png" %> </td>
      <td><%= display_course.name %></td>
      <td>
        <% display_course.cohorts.each do |cohort| %>
        <div>
        <%= cohort.name %>      
        </div>
        <% end %>    
      </td>
      <td>
        <%= link_to new_course_cohort_path(display_course), :method => "get", class: "small_button" do  %>
          <button>Add Cohort</button>
        <% end %>

        <%= link_to course_path(display_course), :method => "get", class: "small_button" do %>
          <button>View</button>
        <% end %>

        <%= link_to edit_course_path(display_course), :method => "get", class: "small_button" do %>
          <button>Edit</button>
        <% end %>

        <%= link_to course_path(display_course), :method => "delete", :remote => "true", class: "delete-course small_button" do %>
          <button>Delete</button>
        <% end %>
         
      </td>
     </tr>
    <% end %>
  </tbody>
</table>


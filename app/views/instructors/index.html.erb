<h1>Instructors</h1>

<div>
<%= link_to image_tag('icons/icons8-add_property.png') + " Add New Instructor", new_instructor_path, class: "btn" %>
</div>



<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col"> </th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Cohort(s)</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
  <% @instructors.each do |display_instructor| %>
    <tr class="main-student">
      <td> <%= image_tag "icons/icons8-user_location.png" %> </td>
      <td><%= display_instructor.first_name %></td>
      <td><%= display_instructor.last_name %></td>
      <td>
        <% display_instructor.cohorts.each do |cohort| %>
        <div>
        <%= cohort.name %>      
        </div>
        <% end %> 
      </td>
      <td>
        <%= link_to instructor_path(display_instructor), :method => "get", class: "small_button" do %>
          <button>View</button>
        <% end %>

        <%= link_to edit_instructor_path(display_instructor), :method => "get", class: "small_button" do %>
          <button>Edit</button>
        <% end %>

        <%= link_to instructor_path(display_instructor), :method => "delete", :remote => "true", class: "delete-student small_button" do %>
          <button>Delete</button>
        <% end %>
      </td>
     </tr>
    <% end %>
  </tbody>
</table>



        <%= form_for @instructor do |f| %>

                <div>
                    <%= f.label :first_name, 'First Name' %>
                    <%= f.text_field :first_name, class: 'form-control' %>
                </div>
                
                <div>
                    <%= f.label :last_name, 'Last Name' %>
                    <%= f.text_field :last_name, class: 'form-control' %>
                </div>

                <div>   
                    <%= f.label :birthday, 'Date of Birth' %>
                    <%= f.date_field :birthday, class: 'form-control' %>
                </div>

                <div>   
                    <%= f.label :highest_education, 'Highest Education' %>
                    <%= f.select :highest_education, options_for_select(['HS', 'College', 'Masters', 'PHD']), {prompt: ' '}, class: "form-control" %>
                </div>

                 <div>
                    <%= f.label :salary %>
                    <%= f.number_field :salary, class: 'form-control' %>
                 </div>

                    <br>
                <div>   
                    <%= f.submit "Submit", class: 'btn btn-light' %>
                </div>

            <% end %>